{
  "name": "node-red-contrib-foxtron-dali",
  "version": "0.1.0",
  "description": "A Node-RED node for DALI gear connected to Foxtron serial controllers.",
  "keywords": [
    "node-red",
    "dali",
    "foxtron",
    "lighting"
  ],
  "author": "Tomas Kavan",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomasKavan/node-red-contrib-foxtron-dali"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-html",
    "copy-html": "copyfiles -u 1 \"src/**/*.html\" dist/",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "jest",
    "prepare": "npm run build"
  },
  "dependencies": {
    
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-red": "^1.3.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "node-red": {
    "nodes": {
      "foxtron-dali-ballast": "dist/nodes/foxtron-dali-ballast.js"
    }
  }
}
